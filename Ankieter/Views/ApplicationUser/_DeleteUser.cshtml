@model Ankieter.Models.Views.ApplicationUserViewModels.DeleteApplicationUserViewModel
@using Ankieter.Models

<div class="form-horizontal">
    <div class="row">
        <form asp-action="DeleteUser" role="form" method="post">
            <div class="form-horizontal">
                <h3 class="text-center">Usuń użytkownika</h3>
                <hr />
                <div class="alert alert-danger text-center" role="alert">
                    <h4>Jesteś pewien, że chcesz usunąć użytkownika <span class="text-bold">@Model.UserName</span>?</h4>
                </div>
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.UserName)
                <div class="col-lg-2 col-md-2 col-sm-2 col-lg-offset-5 col-md-offset-5 col-sm-offset-5">
                    <button type="submit" asp-action="DeleteUser" class="btn btn-danger">Usuń</button>
                </div>
            </div>
        </form>
    </div>
</div>
