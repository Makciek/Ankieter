@model ApplicationRoleViewModel
@using Ankieter.Models

<form asp-action="AddEditApplicationRole" role="form">
    <h3 class="text-center">Dodaj/modyfikuj rolę</h3>
    <hr />
    <div class="form-horizontal">
        <div class="row">
            <div class="form-group">
                <label asp-for="RoleName" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="RoleName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="Description" class="form-control" />
                </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2 col-lg-offset-5 col-md-offset-5 col-sm-offset-5">
                <button type="submit" asp-action="AddEditApplicationRole" class="btn btn-success">Zapisz</button>
            </div>
        </div>
    </div>  
</form>
