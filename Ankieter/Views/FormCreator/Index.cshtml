@model Ankieter.Models.Forms.CreatedForm

<h4>CreatedForm</h4>
<hr />
<div class="row">
    <div class="col-md-6 spliter-right">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="spliter-down spliter-top padding-bottom-5 padding-top-5">
                <button class="btn btn-default" style="width: 100%;" type="button">
                    <span class="text-center">
                        Add new input
                        <i class="fa fa-plus-circle fa-lg fa-add" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
            <div class="form-group padding-top-5">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Preview</h3>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/Form/formCreator.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
