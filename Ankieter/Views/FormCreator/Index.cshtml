@model Ankieter.Models.Forms.CreatedForm

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js" asp-append-version="false"></script>
<script src="~/js/Form/formCreatorController.js" asp-append-version="true"></script>

<h4>CreatedForm</h4>
<hr />
<div class="row" ng-app="myApp">
    <div class="col-md-6 spliter-right" ng-controller="formCreatorController">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="panel">
                <div id="inputList" ng-repeat="input in inputs">
                    {{input.type}}
                </div>
                <button class="btn btn-default" style="width: 100%;" type="button">
                    <span class="text-center">
                        Add new input
                        <i class="fa fa-plus-circle fa-lg fa-add" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
            <div class="form-group padding-top-5">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Preview</h3>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
